= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :cover
    = f.text_field :cover , :value=>""

  .field
    = f.label :scanned_pages
    = f.text_field :scanned_pages, :value=>""

  .actions
    = f.submit 'Save'


  :javascript
    $( document ).ready(function() {
       initAssetManager();
    });